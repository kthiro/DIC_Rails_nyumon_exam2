<% if @blog.errors.any? %>
  <h3><%= @blog.errors.count %>件のエラーがあります！</h3>
  <ul>
    <% @blog.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @blog, local: true, url: choose_path_new_or_edit) do |form| %>
  <h4><%= form.label :'タイトル' %></h4>
  <div class = 'blog_title'>
    <%= form.text_field :title, size: "30" %>
  </div>
  <h4><%= form.label :'本文' %></h4>
  <div class = 'blog_content'>
    <%= form.text_area :content, size: "70*2" %>
  </div>
  <br>
  <%= form.submit %>

<% end %>